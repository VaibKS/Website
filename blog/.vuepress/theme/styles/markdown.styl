@require './defaults'

body {
  @apply font-inter;
  font-size: 16px;
}

h1, h2, h3, h4, h5 {
  @apply my-2 text-gray-900 font-medium;
}

h1 {
  @apply text-3xl;
}

h2 {
  @apply text-2xl mt-16 mb-6;
}

h3 {
  @apply text-xl mt-10 mb-6;
}

h4 {
  @apply text-lg mt-10;
}

h5 {
  @apply text-base font-bold mt-8;
}

ul, ol {
  @apply leading-8 my-2 list-inside;
}

ul {
  @apply list-disc;
}

ol {
  @apply list-decimal;
}

blockquote {
  @apply my-4 bg-indigo-200 pl-4 pr-2 py-2 text-indigo-900 border-l-8 border-indigo-800;
}

code {
  @apply bg-indigo-100 text-indigo-800;
}

.content__default 
  @apply break-words w-full max-w-4xl mx-auto;
  min-height 600px
  .header-anchor
    @apply hidden float-left text-gray-400;
  h1
    .header-anchor
      @apply hidden;
    &:first-child
      @apply mt-6 mb-8 text-3xl font-merienda tracking-tighter font-bold;
  h2, h3, h4, h5
    &:hover
      .header-anchor
        @apply block;
  a
    @apply text-indigo-600;
  hr
    @apply my-16 border-gray-200;
    border-width 0 0 2px
  p
    @apply my-6 leading-7;
  img
    @apply max-w-full mx-auto my-6  object-cover;

.header-anchor {
  display: block;
  font-size: .85em;
  float: left;
  margin-left: -.87em;
  padding-right: .23em;
  margin-top: .125em;
}

@media only screen and (min-width: $md) 
  .content__default
    h1
      &:first-child
        @apply text-5xl;