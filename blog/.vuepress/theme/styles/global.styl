// breakpoints

$sm = 640px
$md = 768px
$lg = 1024px
$xl = 1280px


.theme-container.mobile-active
  padding-top 6rem

header 
  z-index 12
  .mobile-nav
    height calc(100%)
    width 100%
    position fixed
    top 0
    left 0
    z-index 10
    @apply bg-white;

header 
  @apply transition-all duration-300 bg-white;
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  .hamburger .stripe
    @apply bg-gray-600;

header
  .logo a
    @apply text-teal-900;

.home
  header
    @apply bg-salmon text-white;
    .logo a
      @apply text-white;
    .hamburger .stripe
      @apply bg-gray-300;
    nav
      @apply bg-salmon text-white;




header.mobile-active
  position fixed
  top 0
  left 0





.hamburger.active
  .stripe:first-child
    transform rotate(45deg) translate(4px, 4px)
  .stripe:last-child
    transform rotate(135deg) translate(-4px, 4px)

.hamburger
  .stripe
    @apply w-full h-px bg-gray-200 my-1 transition-transform duration-300;

.project-posts, .blog-posts
  h5
    @apply uppercase text-gray-400;

.svg-btn
  @apply flex items-center;
  svg
    @apply fill-current w-4 ml-2;
